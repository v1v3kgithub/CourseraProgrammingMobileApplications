<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#ff5d99ff">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/dialog_title"
            android:id="@+id/tvDialogTitle"
            android:paddingBottom="20dp"
            android:layout_gravity="center_horizontal" android:textSize="20dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/dialog_message"
            android:paddingBottom="20dp"
            android:id="@+id/tvDialogMessage" android:layout_gravity="center_horizontal" android:textSize="20dp"/>
</LinearLayout>